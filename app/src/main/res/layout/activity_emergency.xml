<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.emergencyActivity">

    <FrameLayout
        android:id="@+id/navigationFrameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <ImageButton
        android:id="@+id/mainEmergencyButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emergency_circle_black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Repeatedly press 3 Times"
        android:textAlignment="center"
        android:textColor="@color/app_superiority_blue"
        app:layout_constraintBottom_toBottomOf="@+id/mainEmergencyButton"
        app:layout_constraintEnd_toEndOf="@+id/mainEmergencyButton"
        app:layout_constraintStart_toStartOf="@+id/mainEmergencyButton"
        app:layout_constraintTop_toBottomOf="@+id/nextStepInfoText" />

    <TextView
        android:id="@+id/nextStepInfoText"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Safe SOS"
        android:textAlignment="center"
        android:textColor="@color/app_ghost_white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="@+id/mainEmergencyButton"
        app:layout_constraintEnd_toEndOf="@+id/mainEmergencyButton"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/mainEmergencyButton"
        app:layout_constraintTop_toTopOf="@+id/mainEmergencyButton"
        app:layout_constraintVertical_bias="0.336" />

    <ImageView
        android:id="@+id/sosEmergencyImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/connectEmegencyImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emergency_circle" />

    <ImageView
        android:id="@+id/connectEmegencyImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sosEmergencyImage"
        app:srcCompat="@drawable/emergency_circle" />

    <ImageView
        android:id="@+id/findingEmergencyImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/connectEmegencyImage"
        app:layout_constraintTop_toTopOf="@+id/sosEmergencyImage"
        app:srcCompat="@drawable/emergency_circle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Emergency\n SOS"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/sosEmergencyImage"
        app:layout_constraintStart_toStartOf="@+id/sosEmergencyImage"
        app:layout_constraintTop_toBottomOf="@+id/sosEmergencyImage" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Connect To \nSafe Network"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/connectEmegencyImage"
        app:layout_constraintStart_toStartOf="@+id/connectEmegencyImage"
        app:layout_constraintTop_toBottomOf="@+id/connectEmegencyImage" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Finding a Helper"
        app:layout_constraintEnd_toEndOf="@+id/findingEmergencyImage"
        app:layout_constraintStart_toStartOf="@+id/findingEmergencyImage"
        app:layout_constraintTop_toBottomOf="@+id/findingEmergencyImage" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:textSize="20dp"
        android:textColor="@color/app_ghost_white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sosEmergencyImage"
        app:layout_constraintEnd_toEndOf="@+id/sosEmergencyImage"
        app:layout_constraintStart_toStartOf="@+id/sosEmergencyImage"
        app:layout_constraintTop_toTopOf="@+id/sosEmergencyImage" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="36dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/findingEmergencyImage"
        app:layout_constraintEnd_toEndOf="@+id/findingEmergencyImage"
        app:layout_constraintStart_toStartOf="@+id/findingEmergencyImage"
        app:layout_constraintTop_toTopOf="@+id/findingEmergencyImage"
        app:srcCompat="@android:drawable/stat_sys_speakerphone" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/mainEmergencyButton"
        app:layout_constraintStart_toStartOf="@+id/mainEmergencyButton"
        app:layout_constraintTop_toBottomOf="@+id/mainEmergencyButton" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAFE"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/app_ghost_white"
        app:layout_constraintBottom_toBottomOf="@+id/connectEmegencyImage"
        app:layout_constraintEnd_toEndOf="@+id/connectEmegencyImage"
        app:layout_constraintStart_toStartOf="@+id/connectEmegencyImage"
        app:layout_constraintTop_toTopOf="@+id/connectEmegencyImage" />

</androidx.constraintlayout.widget.ConstraintLayout>