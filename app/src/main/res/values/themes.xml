<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Safe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue_yonder</item>
        <item name="colorPrimaryVariant">@color/app_superiority_blue</item>
        <item name="colorOnPrimary">@color/app_ghost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_light_pink</item>
        <item name="colorSecondaryVariant">@color/app_orange_red</item>
        <item name="colorOnSecondary">@color/app_black_coral</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Safe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Safe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Safe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>